<BoxBorder>:
    canvas.before: 
        Color: 
            rgb: 1,0,0 
        Line:
            width: 1
            rectangle: (self.x, self.y, self.width, self.height)
            rectangle: (self.x, self.y, self.width, self.height)

<MeterPanel>:
    orientation: 'vertical'
    BoxBorder:
        size_hint: 1,0.4
    Slider:
        size_hint: 1,0.6
        orientation: 'vertical'
        min: 0
        max : 1 
        value : 0.5
        canvas.before: 
            Color: 
                rgb: 1,0,0 
            Line:
                width: 1
                rectangle: (self.x, self.y, self.width, self.height)
            Color: 
                rgb: 0,1,0 
            Rectangle:
                pos: (self.x+5,self.y+5)
                size: (2, root.meter_value)
    BoxBorder:
        size_hint: 1,0.2
        
